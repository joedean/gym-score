<div class="page-header">
  <%= link_to new_event_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Event
  <% end %>
  <h1><%= tournament_name %> <%= athlete_name %> Events</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Score</th>
        <th>Place</th>
        <th>Personal Best</th>
      </tr>
    </thead>
    <tbody>
      <%= content_tag_for(:tr, @event_collection.athletes_events_meets) do |athletes_events_meet| %>
        <td>
          <%= link_to(athletes_events_meet.event.type.underscore.humanize,
                      athlete_event_meets_path(@event_collection.athlete,
                                              athletes_events_meet.event)) %>
        </td>
        <td><%= best_in_place athletes_events_meet, :score, as: :input, pattern: "[0-9]*" %></td>
        <td><%= best_in_place athletes_events_meet, :place, as: :input, pattern: "[0-9]*" %></td>
        <td><%= @event_collection.athlete.personal_best athletes_events_meet.event %></td>
      <% end %>
    </tbody>
    <tfoot>
      <td>Overall</td>
      <td id="overall-score"><%= @event_collection.overall_score %></td>
      <td><%= @event_collection.overall_place %></td>
      <td></td>
    </tfoot>
  </table>
</div>
