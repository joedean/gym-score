<%= form_for(@event, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :tournament, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= @event.tournament.name %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :athlete, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= @event.athlete.full_name %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :score, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :score, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :place, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :place, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
