<%= form_for(@tournament, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @tournament.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@tournament.errors.count, "error") %> prohibited this tournament from being saved:</h4>

      <ul>
      <% @tournament.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :venue, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :venue, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :address, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :city, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :state, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :zip, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :zip, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :event_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :event_date, :class => "form-control" %>
    </div>
  </div>
  <h4> Add Athletes </h4>

  <%= render partial: 'add_athletes', locals: { tournament: @tournament, athletes: Athlete.all } %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
